@inherits RazorBlade.HtmlTemplate<Description>;
@{
    var nr = Model.Data!.CsFiles!.Length;
    var generator = Model.Generator!;
    var devenv = @"C:\Program Files\Microsoft Visual Studio\2022\Community\Common7\IDE\devenv.exe";
    devenv = devenv.Replace("\\", "\\\\");
    int nrStep = 1;
}
{
    "step_@(nrStep++)_exec":"clipchamp.exe launch",
    "step_@(nrStep++)_text": "Welcome to Roslyn Examples - the introduction is automatically generated",
    "step_@(nrStep++)_text":"If you want to see more examples , see  [List Of RSCG] https://ignatandrei.github.io/RSCG_Examples/v2/docs/List-of-RSCG",
    "step_@(nrStep++)_browser":"https://ignatandrei.github.io/RSCG_Examples/v2/docs/List-of-RSCG",
    "step_@(nrStep++)_text": "My name is Andrei Ignat and I am deeply fond of Roslyn Source Code Generator. ",

"step_@(nrStep++)_text": "Today I will present @generator.Name  that is good for @string.Join("",Model.Data!.GoodFor!) .",
"step_@(nrStep++)_browser":"@generator.NugetFirst",
"step_@(nrStep++)_text": "You can download the code from https://ignatandrei.github.io/RSCG_Examples/v2/docs/@generator.Name)",
"step_@(nrStep++)_browser":"https://ignatandrei.github.io/RSCG_Examples/v2/docs/@generator.Name",
"step_@(nrStep++)_text":" Here is the code ",
"step_@(nrStep++)_exec":"explorer.exe /select,@Model.Data!.outputFiles!.fullPathToCsproj!.Replace("\\","\\\\")",
"step_@(nrStep++)_text": "So , let's start the project ",
"step_@(nrStep++)_exec": "@devenv @Model.Data.outputFiles.fullPathToCsproj.Replace("\\","\\\\")",

"step_@(nrStep++)_text": "You put the  [@generator.NameNugetFirst()](@generator.NugetFirst) into the csproj ",

"step_@(nrStep++)_exec": "@devenv /edit @Model.Data.outputFiles.fullPathToCsproj.Replace("\\","\\\\")",

"step_@(nrStep++)_text": "I have used the @generator.Name in those files",

@for (var i = nr - 1; i >= 0; i--)
{
                //var ex = "exec";// + (30 + (nr-i) *10);
    <text>
        "step_@(nrStep++)_exec":"@devenv /edit @Model.Data!.outputFiles!.contentFiles![i].fullPathFile.Replace("\\","\\\\")",
    </text>

}

"step_@(nrStep++)_hide": "hide"


}